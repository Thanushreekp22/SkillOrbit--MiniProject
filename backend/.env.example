# Server Configuration
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/skillorbit

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES=24h

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# AI Configuration (Choose ONE)
# Option 1: Groq Cloud (Recommended - Free tier available)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here 

# Option 2: Grok AI (xAI)
# Get your API key from: https://console.x.ai/
# GROK_API_KEY=your_grok_api_key_here

# Email Configuration (Optional - for sending reports via email)
# Leave empty for development (uses test email service)
# For production, use Gmail, SendGrid, or other SMTP service
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password
# EMAIL_FROM="SkillOrbit <noreply@skillorbit.com>"
